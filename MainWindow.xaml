<Window x:Class="LogonAuditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LogonAuditor"
        mc:Ignorable="d"
        Title="Logon Auditor v1.0 by James Gentile" Height="700" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Start" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBox Name="textBlock" 
         ScrollViewer.HorizontalScrollBarVisibility="Auto"
         ScrollViewer.VerticalScrollBarVisibility="Auto"
         ScrollViewer.CanContentScroll="True" Margin="10,35,10,10"/>
        <Button Content="Open Log .XML" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="auto" Click="Button_OpenXML"/>


    </Grid>
</Window>
